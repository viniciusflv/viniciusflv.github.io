---
import type { HTMLAttributes } from 'react';

const { as: Tag = 'strong', isHighlighted } = Astro.props;

export type Props = {
  as?: string;
  isHighlighted?: boolean;
};
---

<Tag class:list={['heading', isHighlighted ? '--highlighted' : null]}>
  <slot />
</Tag>

<style>
  .heading {
    @apply text-center md:text-start;

    &.--highlighted {
      @apply text-transparent
      bg-clip-text
      bg-gradient-to-r
      from-dracula-currentLine
      to-dracula-comment
      dark:from-dracula-cyan 
      dark:to-dracula-green;
    }

    &:is(h1) {
      @apply text-xl
      md:text-3xl
      md:leading-11
      lg:text-4xl
      lg:leading-14
      font-bold;
    }

    &:is(h2) {
      @apply italic lg:text-xl md:text-lg opacity-80;
    }

    &:is(h3) {
      @apply font-bold lg:text-xl text-lg;

      @apply relative
      flex
      justify-center
      text-center
      dark:text-dracula-cyan
      sm:justify-start
      sm:text-left;

      &:before {
        content: '';
        @apply absolute
        -bottom-4
        h-2
        w-8
        rounded
        bg-dracula-comment;
        @apply dark:bg-dracula-green;
      }
    }

    &:is(strong) {
      @apply text-dracula-comment
      dark:text-dracula-green;
    }
  }
</style>
