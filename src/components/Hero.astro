---
import { Svg } from '@svjson/react';

import { meRicknmorty } from '../assets/svg';

const { clip } = Astro.props;
---

<div class="hero">
  <Svg className="absolute" alt="clip" src={clip} clipPathId="hero-clip-path" />
  <div class="content">
    <header class="header"><slot /></header>
    <Svg
      className="relative lg:mb-[-50vh]"
      alt="Me as a Rick and Morty Character"
      src={meRicknmorty}
    />
  </div>
</div>

<style>
  .hero {
    @apply flex relative
    h-[80vh]
    w-full
    bg-gray-200
    dark:bg-dark-darkest;

    clip-path: url(#hero-clip-path);

    .content {
      @apply container
      grid
      md:grid-cols-2
      items-center
      mx-auto
      p-8
      pb-32
      gap-16;
    }

    .header {
      @apply flex
      flex-col
      gap-8;
    }

    @keyframes grow {
      from {
        height: 100vh;
      }
    }

    animation-name: grow;
    animation-duration: 300ms;
    animation-fill-mode: forwards;
    animation-timing-function: ease-in;
  }
</style>
