---
import { Svg } from '@svjson/react';

const {
  as: Tag = 'a',
  label,
  icon,
  isCurrentColor,
  className,
  ...props
} = Astro.props;
---

<Tag class:list={['menu__item', className]} title={label} {...props}>
  {
    Astro.slots.default ? (
      <slot />
    ) : (
      <Svg
        className="w-6 sm:w-8"
        alt={label}
        src={icon}
        isCurrentColor={isCurrentColor}
      />
    )
  }
</Tag>

<style is:global>
  .menu__item {
    @apply relative
    flex
    flex-col
    gap-1
    items-center
    outline-none
    transition-all
    delay-75
    duration-75
    ease-in-out;

    &:after {
      content: attr(title);
      @apply absolute
      -bottom-4
      opacity-0
      rounded
      text-xs
      whitespace-nowrap
      font-bold
      transition-all
      delay-75
      duration-75
      ease-in-out;
    }

    &:hover,
    &:focus,
    &:focus-within {
      @apply -translate-y-2
      text-dracula-comment
      dark:text-dracula-green;

      &:after {
        @apply opacity-100;
      }
    }
  }
</style>
