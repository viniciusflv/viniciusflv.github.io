<style is:global>
  * {
    /* @apply outline outline-1 outline-red-500; */
    @apply scroll-smooth
    transition-[height,width];

    &::-webkit-scrollbar {
      @apply w-3;
    }
    &::-webkit-scrollbar-track {
      @apply bg-white;
    }
    &::-webkit-scrollbar-thumb {
      @apply rounded-full bg-dracula-comment;
    }
    .dark &::-webkit-scrollbar-track {
      @apply bg-dracula-darkest;
    }
    .dark &::-webkit-scrollbar-thumb {
      @apply bg-dracula-green;
    }

    @media (prefers-reduced-motion: reduce) {
      & {
        animation-duration: 0ms !important;
        transition-duration: 0ms !important;
        scroll-behavior: initial !important;
      }
    }

    &::selection {
      @apply text-dracula-background 
      bg-dracula-orange;
    }
  }

  html,
  body,
  .page {
    @apply flex
    flex-col
    w-full
    min-h-[100dvh]
    font-base;
    @apply text-gray-600;

    background-image: linear-gradient(
      45deg,
      theme("colors.gray.200"),
      theme("colors.white")
    );

    .dark &,
    &.dark {
      color-scheme: dark;
      background-image: linear-gradient(
        45deg,
        theme("colors.dracula.darkest"),
        theme("colors.dracula.currentLine")
      );

      @apply text-gray-50;
    }

    .light & {
      .expressive-code {
        figure.frame {
          figcaption.header {
            @apply bg-none
            bg-gray-200;
            .title {
              @apply bg-white
              text-dracula-darkest;
              &::after {
                @apply border-t-dracula-comment;
              }
            }

            &::before {
              @apply border-gray-300;
            }
          }

          pre {
            @apply bg-white border-gray-300;
            code {
              @apply invert;
            }
          }

          .copy button {
            @apply bg-gray-400;
          }
        }
      }
    }
  }
</style>
