<style is:global>
  * {
    @apply scroll-smooth;

    @media (orientation: landscape) {
      &::-webkit-scrollbar {
        @apply w-3;
      }
      &::-webkit-scrollbar-track {
        @apply bg-dracula-foreground rounded-full;
      }
      &::-webkit-scrollbar-thumb {
        @apply rounded-full bg-dracula-comment;
      }
      .dark &::-webkit-scrollbar-track {
        @apply bg-[color:#0005];
      }
      .dark &::-webkit-scrollbar-thumb {
        @apply bg-dracula-green;
      }
    }

    @media (prefers-reduced-motion: reduce) {
      & {
        animation-duration: 0ms !important;
        transition-duration: 0ms !important;
        scroll-behavior: initial !important;
      }
    }

    &::selection {
      @apply text-dracula-background 
      bg-dracula-orange;
    }
  }

  html,
  body,
  .page {
    @apply flex
    flex-col
    w-full
    min-h-[100dvh]
    font-base;
    @apply text-gray-600;

    .dark & {
      color-scheme: dark;

      @apply bg-dracula-darkest
      text-gray-50;
    }
  }

  .markdown {
    @apply flex flex-col gap-8;

    h1,
    h2,
    h3,
    h4,
    h5 {
      @apply pt-8
      -mt-8
      text-center
      sm:text-left;
    }

    h1 {
      @apply text-2xl
      md:text-3xl
      lg:text-5xl
      md:leading-11
      lg:leading-16
      font-bold
      tracking-wider;

      @apply text-transparent
      bg-clip-text
      bg-gradient-to-r
      from-dracula-currentLine
      to-dracula-comment;

      .dark & {
        @apply from-dracula-cyan 
        to-dracula-green;
      }
    }

    h3 {
      @apply relative
      flex
      justify-center
      text-center
      sm:justify-start
      sm:text-left;

      &:before {
        content: '';
        @apply absolute
        -bottom-4
        h-2
        w-8
        rounded
        bg-dracula-comment;

        .dark & {
          @apply bg-dracula-green;
        }
      }
    }

    h2,
    h3 {
      @apply lg:text-xl md:text-lg;

      &:is(h2) {
        @apply italic;
      }

      &:is(h3) {
        @apply font-bold;
      }
    }

    h4 {
      @apply text-lg font-bold;
    }

    h5 {
      @apply font-bold;
    }

    hr {
      @apply glow-dracula-comment;

      .dark & {
        @apply glow-dracula-cyan;
      }
    }

    a:not(.tag) {
      @apply gap-2
      text-blue-600;

      .dark & {
        @apply text-dracula-cyan;
      }

      &:is(:hover, :focus, :active) {
        @apply underline;
      }
    }

    strong {
      @apply text-dracula-comment;

      .dark & {
        @apply text-dracula-green;
      }
    }

    blockquote {
      @apply italic
      text-xs
      sm:text-sm
      p-4
      border-l-4
      border-l-dracula-comment
      bg-black
      opacity-80
      bg-opacity-5
      rounded;

      .dark & {
        @apply border-l-dracula-green;
      }
    }

    ul {
      @apply pl-8;
      li {
        @apply list-disc;
      }
    }

    ol {
      @apply pl-8;
      li {
        @apply list-decimal;
      }
    }
  }
</style>
