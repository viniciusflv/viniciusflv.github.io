<style is:global>
  .enabled {
    .shiki.dracula {
      @apply relative max-w-full rounded
      glow-dark-pink
      dark:glow-dark-green;

      .language-id {
        @apply absolute
        left-8
        top-[-1rem]
        px-1
        rounded
        text-dark-darkest
        font-bold
        bg-dark-green
        shadow-xl;
      }

      .code-container {
        @apply p-8
        overflow-auto;

        &::-webkit-scrollbar {
          @apply w-3;
        }
        &::-webkit-scrollbar-track {
          @apply bg-black;
        }
        &::-webkit-scrollbar-thumb {
          @apply rounded-full bg-dark-green;
        }
      }

      .light & {
        @apply !bg-white;

        & .language-id,
        .code-container {
          @apply invert;
        }
      }
    }
  }
</style>
