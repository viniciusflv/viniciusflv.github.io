---
import { Svg } from '@svjson/react';

const {
  as: Tag = 'a',
  label,
  icon,
  isCurrentColor,
  className,
  ...props
} = Astro.props;
---

<Tag class:list={['menu__item', className]} title={label} {...props}>
  <Svg alt={label} src={icon} isCurrentColor={isCurrentColor} width="30px" />
</Tag>

<style is:global>
  .enabled {
    .menu__item {
      @apply relative
      flex
      flex-col
      gap-1
      items-center
      outline-none
      transition-all
      delay-75
      duration-75
      ease-in-out;

      &:after {
        content: attr(title);
        @apply absolute
        -bottom-5
        opacity-0
        rounded
        text-xs
        whitespace-nowrap
        font-bold
        transition-all
        delay-75
        duration-75
        ease-in-out;
      }

      &:hover,
      &:focus,
      &:focus-within {
        @apply -translate-y-2
        text-dark-comment
        dark:text-dark-green;

        &:after {
          @apply opacity-100;
        }
      }
    }
  }
</style>
